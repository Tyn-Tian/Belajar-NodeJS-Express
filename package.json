{
  "name": "belajar-nodejs-express",
  "version": "1.0.0",
  "type": "module",
  "description": "Belajar NodeJs Express",
  "main": "./src/index.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "maxConcurrency": 1,
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "author": "Christian",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/Tyn-Tian/Belajar-NodeJS-Unit-Test"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.6",
    "@types/jest": "^29.5.12",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.2.4"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
